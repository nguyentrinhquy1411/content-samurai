# API Keys (Required)
OLLAMA_API_KEY=your_ollama_api_key_here
SERPAPI_API_KEY=your_serpapi_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Model Configuration
BASE_URL=https://ollama.com
LLM_MODEL=llama3

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin123

# ============================================
# SEO CONFIGURATION
# ============================================

# Content Length Settings
# Minimum target word count for generated content
# System will aim for 30% more than competitor average
TARGET_WORD_COUNT=2000

# Heading Structure Settings
# Maximum heading depth (1=H1, 2=H2, 3=H3)
MAX_HEADING_DEPTH=3

# Minimum number of H2 main sections
MIN_H2_SECTIONS=5

# Minimum H3 subsections per H2 section
MIN_H3_PER_H2=2

# Schema Markup Settings
# Include schema markup recommendations (true/false)
INCLUDE_SCHEMA_MARKUP=true

# Readability Settings
# Target Flesch-Kincaid grade level (8.0 = 8th grade)
READABILITY_TARGET=8.0

# ============================================
# CONTENT ENHANCEMENT FEATURES
# ============================================

# Internal Linking
# Suggest internal linking opportunities (true/false)
ENABLE_INTERNAL_LINKING=true

# External Sources
# Suggest external authority sources (true/false)
ENABLE_EXTERNAL_SUGGESTIONS=true

# Image Suggestions
# Suggest image alt texts (true/false)
ENABLE_IMAGE_SUGGESTIONS=true

# ============================================
# ADVANCED SETTINGS (Optional)
# ============================================

# Competitor Analysis
# Number of top results to analyze (default: 5)
# MAX_SEARCH_RESULTS=5

# Content Quality
# Minimum FAQ questions to include (default: 5)
# MIN_FAQ_QUESTIONS=5

# Performance
# LLM context window size (default: 12288)
# LLM_CONTEXT_WINDOW=12288

# LLM temperature (0.0-1.0, default: 0.7)
# LLM_TEMPERATURE=0.7
